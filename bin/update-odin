#!/bin/sh

date="$(date '+%Y-%m-%d' -d '-1 day')"
cd /tmp/
echo downloading Odin from $date
curl -Lfo odin_${date}.zip "https://f001.backblazeb2.com/file/odin-binaries/nightly/odin-ubuntu-amd64-nightly%2B${date}.zip" || { echo error; exit; }
unzip -q odin_${date}.zip
rm -rf ~/odin
mv ubuntu_artifacts ~/odin
patchelf --replace-needed libLLVM-11.so.1 libLLVM-11.so ~/odin/odin
chmod +x ~/odin/odin
